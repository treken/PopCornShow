<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <HorizontalScrollView
            android:id="@+id/horizontal_tvshow_button_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:minHeight="30dp"
            android:layout_marginTop="6dp"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/scroll_tvshow_button_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" />

        </HorizontalScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:text="@string/populares"
            android:typeface="serif" />


        <HorizontalScrollView
            android:id="@+id/horizontal_tvshow_popular_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:minHeight="120dp"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/scroll_tvshow_popular_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" />

        </HorizontalScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:text="@string/today"
            android:typeface="serif" />

        <HorizontalScrollView
            android:id="@+id/horizontal_tvshow_ontheair_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:minHeight="120dp"
            android:scrollbars="none">>

            <LinearLayout
                android:id="@+id/scroll_tvshow_ontheair_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" />

        </HorizontalScrollView>

    </LinearLayout>
</ScrollView>