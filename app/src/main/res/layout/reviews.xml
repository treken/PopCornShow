<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_reviews"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:layout_margin="@dimen/trade_size_dp_3"
    app:cardElevation="@dimen/trade_size_dp_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/trade_size_dp_6">

        <TextView
            android:id="@+id/content_reviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/trade_txt_size_sp_15"
            android:layout_margin="@dimen/trade_size_dp_1"
            android:textAllCaps="true" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/trade_txt_size_sp_20"
                android:layout_margin="@dimen/trade_size_dp_2"
                android:text="@string/author" />

            <TextView
                android:id="@+id/author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/trade_txt_size_sp_18"
                android:layout_margin="@dimen/trade_size_dp_2"
                android:textStyle="normal|bold|italic" />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
