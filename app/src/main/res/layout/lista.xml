<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:foreground="?attr/selectableItemBackground"
    android:minHeight="190dp"
    android:minWidth="135dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="3dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false"
    card_view:cardElevation="0dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <FrameLayout
            android:layout_width="@dimen/poster_filme_width_padrao"
            android:layout_height="@dimen/poster_filme_height_padrao">

            <ImageView
                android:id="@+id/img_lista"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|center_horizontal"
                android:adjustViewBounds="true"
                android:contentDescription="@string/poster_filme"
                android:scaleType="centerCrop"
                android:cropToPadding="true" />

            <include layout="@layout/include_progress" />

        </FrameLayout>

        <TextView
            android:id="@+id/date_oscar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:fontFamily="sans-serif-condensed"
            android:gravity="bottom|center_horizontal"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:typeface="serif" />
    </LinearLayout>
</android.support.v7.widget.CardView>