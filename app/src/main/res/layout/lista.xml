<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/trade_size_dp_3"
    android:minHeight="@dimen/trade_size_dp_50"
    app:cardCornerRadius="@dimen/trade_size_dp_2"
    app:cardElevation="@dimen/trade_size_dp_3"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false"
    card_view:cardElevation="3dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_lista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:adjustViewBounds="true"
                android:contentDescription="@string/poster_filme"
                android:cropToPadding="true"
                android:scaleType="centerCrop" />

            <include layout="@layout/include_progress" />

        </FrameLayout>

        <TextView
            android:id="@+id/date_oscar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:fontFamily="sans-serif-condensed"
            android:gravity="bottom|center_horizontal"
            android:textColor="@color/black"
            android:textSize="@dimen/trade_txt_size_sp_12"
            android:typeface="serif" />
    </LinearLayout>
</android.support.v7.widget.CardView>