<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="2dp"
    app:cardElevation="3dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false"
    card_view:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_lista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@string/imagem_filme"
                android:cropToPadding="false"
                android:src="@drawable/poster_empty"
                android:scaleType="centerCrop" />

            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:theme="@android:style/Widget.DeviceDefault.Light.ProgressBar.Small" />
        </FrameLayout>

        <TextView
            android:id="@+id/date_oscar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:fontFamily="cursive"
            android:layout_marginTop="@dimen/trade_size_dp_3"
            android:gravity="bottom|center_horizontal"
            android:text="dajdnadna"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:typeface="serif"
            card_view:targetApi="jelly_bean" />

    </LinearLayout>

</android.support.v7.widget.CardView>