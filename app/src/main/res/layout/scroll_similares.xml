<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_similares_linear"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:weightSum="1"
    android:padding="2dp">

    <FrameLayout
        android:layout_width="@dimen/poster_filme_width_padrao"
        android:layout_height="@dimen/poster_filme_height_padrao">

        <ImageView
            android:id="@+id/imgPagerSimilares"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foregroundGravity="center_vertical"
            android:scaleType="centerCrop" />

        <ProgressBar
            android:id="@+id/progressBarSimilares"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="false"
            tools:visibility="visible" />

    </FrameLayout>

    <TextView
        android:id="@+id/textSimilaresNome"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:gravity="top|center_horizontal"
        android:maxLines="2"
        android:maxLength="22"/>

</LinearLayout>