<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_tmdb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/tmdb_sobre" />

        <ImageView
            android:id="@+id/img_popcorn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher3" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/infor_tmdb"
        android:textAlignment="center"
        android:layout_margin="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/play_rated"
        android:background="?attr/selectableItemBackground"
        android:layout_height="wrap_content">

     <ImageView
         android:layout_width="wrap_content"
         android:src="@drawable/google_play"
         android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:text="@string/rated_googleplay"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/criado" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="email"
            android:text="@string/icaronunes"
            android:layout_marginLeft="3dp" />


    </LinearLayout>

</LinearLayout>