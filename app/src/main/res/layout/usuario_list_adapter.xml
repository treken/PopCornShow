<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_usuario"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/trade_size_dp_3"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:minHeight="@dimen/trade_size_dp_100"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_filme_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@color/transparent"
            android:scaleType="centerCrop" />


        <TextView
            android:id="@+id/text_rated_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/yellow_transparente"
            android:padding="@dimen/trade_size_dp_4"
            android:textStyle="normal|bold"
            android:visibility="invisible" />

        <include layout="@layout/include_progress" />
    </FrameLayout>


</android.support.v7.widget.CardView>