<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_usuario"
    android:layout_width="wrap_content"
    android:layout_height="314dp"
    android:orientation="vertical"
    android:layout_margin="3dp">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_filme_usuario"
            android:layout_width="174dp"
            android:layout_height="261dp"
            android:src="@drawable/filme342"
            android:background="@color/transparent"
            android:scaleType="fitStart" />


        <TextView
            android:text="7.8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_rated_favoritos"
            android:padding="4dp"
            android:autoText="false"
            android:background="@color/yellow_transparente"
            android:textStyle="normal|bold"
            android:visibility="invisible" />

        <include layout="@layout/include_progress"/>
    </FrameLayout>


    <LinearLayout
        android:layout_width="176dp"
        android:layout_height="49dp"
        android:layout_gravity="bottom">

        <ImageButton
            android:id="@+id/img_button_coracao_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/coracao_vazio"
            android:background="@color/transparent"
            android:layout_weight="1"
            android:layout_gravity="center_vertical" />

        <ImageButton
            android:id="@+id/img_button_estrela_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/estrela_vazia"
            android:background="@color/transparent"
            android:layout_weight="1"
            android:layout_gravity="center_vertical" />

        <ImageButton
            android:id="@+id/img_button_relogio_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/relogio"
            android:background="@color/transparent"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:elevation="1dp" />


    </LinearLayout>

</android.support.v7.widget.CardView>