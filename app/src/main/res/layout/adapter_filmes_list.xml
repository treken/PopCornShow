<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/trade_size_dp_3"
    android:layout_weight="1"
    android:foreground="?attr/selectableItemBackground"
    android:minHeight="190dp"
    android:minWidth="135dp"
    app:cardCornerRadius="@dimen/trade_size_dp_4"
    app:cardElevation="@dimen/trade_size_dp_3"
    card_view:cardElevation="@dimen/trade_size_dp_3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="@dimen/trade_size_dp_150">

            <ImageView
                android:id="@+id/imgFilmes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:contentDescription="@string/imagem_filme"
                android:cropToPadding="true"
                android:scaleType="centerCrop" />

            <ProgressBar
                android:id="@+id/progress_filmes_lista"
                style="@android:style/Widget.DeviceDefault.ProgressBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:elevation="3dp" />


            <TextView
                android:id="@+id/title_filmes_lista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginLeft="@dimen/trade_size_dp_6"
                android:layout_marginRight="@dimen/trade_size_dp_6"
                android:background="@color/black_transparente"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/white"
                android:textSize="@dimen/trade_txt_size_sp_16"
                android:typeface="serif" />

        </FrameLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>