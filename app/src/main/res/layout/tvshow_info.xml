<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<android.support.v4.widget.NestedScrollView
    android:id="@+id/nested"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    app:layout_anchorGravity="top|bottom"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:id="@+id/linear_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/titulo_tvshow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@color/black_transparente"
            android:gravity="top|start"
            android:lines="2"
            android:maxLines="2"
            android:minLines="1"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/categoria_tvshow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1" />

            <TextView
                android:id="@+id/lancamento"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="end"
                android:textStyle="normal|bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/produtora"
                android:textStyle="normal|italic" />

            <TextView
                android:id="@+id/produtora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"
                android:maxLength="30"
                android:maxLines="1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/status"
                android:textStyle="normal|bold|italic"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:gravity="end" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_poster"
                android:contentDescription="@string/poster_filme"
                android:padding="4dp"
                android:layout_width="@dimen/poster_activity_width"
                android:layout_height="@dimen/poster_activity_height" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_margin="1dp">

                        <ImageView
                            android:id="@+id/img_star"
                            android:layout_width="@dimen/icon_activity_padrao"
                            android:layout_height="@dimen/icon_activity_padrao"
                            android:src="@drawable/icon_star"
                            android:alpha="0" />

                        <TextView
                            android:id="@+id/voto_media"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textStyle="normal|bold" />

                    </FrameLayout>


                    <ImageView
                        android:id="@+id/icon_site"
                        android:layout_width="@dimen/icon_activity_padrao"
                        android:src="@drawable/site_on"
                        android:layout_height="@dimen/icon_activity_padrao"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_margin="1dp" />

                    <ImageView
                        android:id="@+id/icon_reviews"
                        android:layout_width="@dimen/icon_activity_padrao"
                        android:layout_height="@dimen/icon_activity_padrao"
                        android:src="@drawable/icon_reviews"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_margin="1dp" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/seguir"
                        android:layout_weight="1"
                        android:theme="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                        android:visibility="visible" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/original_title" />

                        <TextView
                            android:id="@+id/original_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="@string/popularity" />

                        <TextView
                            android:id="@+id/popularity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"                             />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="@string/production_countries" />

                        <TextView
                            android:id="@+id/production_countries"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="@string/temporada" />

                        <TextView
                            android:id="@+id/temporadas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="@string/status" />

                        <TextView
                            android:id="@+id/statusgone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/descricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:textSize="14sp" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/recycle_tvshow_trailer"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textview_elenco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black_transparente"
            android:gravity="center_horizontal"
            android:text="@string/elenco"
            android:textColor="@color/primary_dark"
            android:textSize="@dimen/trade_txt_size_sp_18"
            android:textStyle="normal|bold"
            android:visibility="invisible" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/recycle_tvshow_elenco"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textview_crews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black_transparente"
            android:gravity="center_horizontal"
            android:text="@string/por_tras_camera_tvshow"
            android:textColor="@color/primary_dark"
            android:textSize="@dimen/trade_txt_size_sp_18"
            android:textStyle="normal|bold"
            android:visibility="invisible" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/recycle_tvshow_producao"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/imdb_site"
            android:text="@string/ver_imdb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/imdb"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:padding="3dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/tmdb_site"
            android:text="@string/ver_tmdb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/tmdb"
            android:textSize="16sp"
            android:padding="3dp"
            android:textStyle="normal|bold" />


        <Button
            android:id="@+id/netflix"
            tools:text="@string/ver_netflix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/netflix"
            android:padding="3dp"
            android:textStyle="normal|bold"
            android:textSize="16sp" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>

    <include layout="@layout/include_progress"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</FrameLayout>