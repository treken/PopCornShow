<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nested"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    app:layout_anchorGravity="top|bottom"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:id="@+id/linear_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:transitionName="poster"
        android:weightSum="1">

        <TextView
            android:id="@+id/titulo_tvshow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@color/black_transparente"
            android:gravity="top|start"
            android:lines="2"
            android:maxLines="2"
            android:minLines="1"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/categoria_tvshow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="1" />

            <TextView
                android:id="@+id/lancamento"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"

                android:gravity="right"
                android:textStyle="normal|bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/produtora"
                android:textStyle="normal|italic" />

            <TextView
                android:id="@+id/produtora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"
                android:maxLength="30"
                android:maxLines="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_poster"
                android:layout_width="126dp"
                android:layout_height="162dp"
                android:contentDescription="@string/poster_filme"
                android:transitionName="poster" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_margin="1dp">

                        <ImageView
                            android:id="@+id/img_star"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_star"
                            android:alpha="0" />

                        <TextView
                            android:id="@+id/voto_media"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textStyle="normal|bold" />

                    </FrameLayout>


                    <ImageView
                        android:id="@+id/icon_site"
                        android:layout_width="wrap_content"
                        android:src="@drawable/site_on"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:layout_margin="1dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/status"
                        android:textStyle="normal|bold|italic"
                        android:textSize="18sp"
                        android:textAlignment="center"
                        android:layout_gravity="center" />

                    <Button
                        android:text="Seguir"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/seguir"
                        android:layout_weight="1"
                        android:theme="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                        android:visibility="gone" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"

                            android:text="@string/original_title" />

                        <TextView
                            android:id="@+id/original_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="@string/popularity" />

                        <TextView
                            android:id="@+id/popularity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="2dp"
                            android:paddingStart="2dp"
                            android:text="" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="@string/production_countries" />

                        <TextView
                            android:id="@+id/production_countries"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="@string/temporada" />

                        <TextView
                            android:id="@+id/temporadas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="1dp"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="@string/status" />

                        <TextView
                            android:id="@+id/statusgone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="" />

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/descricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:textSize="14sp" />

        <HorizontalScrollView
            android:id="@+id/horizontal_treiler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:scrollbars="none"
            android:fillViewport="false"
            android:scrollbarAlwaysDrawHorizontalTrack="false"
            android:scrollbarAlwaysDrawVerticalTrack="false">

            <LinearLayout
                android:id="@+id/scroll_treiler_linerlayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" />

        </HorizontalScrollView>

        <TextView
            android:id="@+id/textview_elenco"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black_transparente"
            android:gravity="center_horizontal"
            android:text="@string/elenco"
            android:textColor="@color/primary_dark"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:visibility="invisible" />

        <HorizontalScrollView
            android:id="@+id/horizontal_elenco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:scrollbars="none"
            android:scrollbarAlwaysDrawHorizontalTrack="false"
            android:scrollbarAlwaysDrawVerticalTrack="false">

            <LinearLayout
                android:id="@+id/scroll_elenco_linerlayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" />

        </HorizontalScrollView>

        <TextView
            android:id="@+id/textview_crews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black_transparente"
            android:gravity="center_horizontal"
            android:text="@string/por_tras_camera_tvshow"
            android:textColor="@color/primary_dark"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:textStyle="normal|bold"
            android:visibility="invisible" />


        <HorizontalScrollView
            android:id="@+id/horizontal_crew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:elevation="0dp"
            android:scrollbars="none"
            android:fillViewport="false"
            android:scrollbarAlwaysDrawHorizontalTrack="false"
            android:scrollbarAlwaysDrawVerticalTrack="false">

            <LinearLayout
                android:id="@+id/scroll_crew_liner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" />

        </HorizontalScrollView>

        <TextView
            android:id="@+id/imdb_site"
            android:text="@string/ver_imdb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/imdb"
            android:textAlignment="center"
            android:background="@color/transparent2"
            android:padding="3dp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/tmdb_site"
            android:text="@string/ver_tmdb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/tmdb"
            android:background="@color/transparent2"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="2dp"
            android:padding="3dp"
            android:textStyle="normal|bold" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>