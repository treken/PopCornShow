<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:minHeight="190dp"
    android:minWidth="135dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:minHeight="@dimen/trade_size_dp_100">


        <ImageView
            android:id="@+id/img_poster_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:elevation="0dp"
            android:padding="2dp"
            android:scaleType="centerCrop" />

        <ProgressBar
            android:id="@+id/progress_poster_grid"
            style="@android:style/Widget.DeviceDefault.ProgressBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/text_title_crew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_margin="2dp"
            android:background="@android:drawable/screen_background_dark_transparent"
            android:gravity="center"
            android:textColor="@color/white"
            android:visibility="invisible" />

    </FrameLayout>

</android.support.v7.widget.CardView>