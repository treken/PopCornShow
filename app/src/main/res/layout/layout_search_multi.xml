<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/trade_size_dp_50">

    <android.support.v7.widget.SearchView
        android:id="@+id/layout_search_multi_search"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/trade_size_dp_50"
        android:background="@color/white"
        android:focusableInTouchMode="true"
        android:iconifiedByDefault="true"
        app:iconifiedByDefault="true"
        app:showAsAction="always" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/layout_search_multi_recycler"
        android:layout_width="match_parent"
        android:layout_height="@dimen/trade_size_dp_350"
        android:clipToPadding="true" />

</LinearLayout>