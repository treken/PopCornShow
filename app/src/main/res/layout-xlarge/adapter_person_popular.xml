<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/trade_size_dp_3"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/trade_size_dp_2"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false"
    card_view:cardElevation="@trade_size_dp_3">

    <FrameLayout
        android:layout_width="match_parent"
        android:minHeight="@dimen/trade_size_dp_250"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_popular_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:adjustViewBounds="true"
            android:contentDescription="@string/imagem_filme"
            android:cropToPadding="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/text_person_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_margin="@dimen/trade_size_dp_1"
            android:background="@color/black_transparente"
            android:gravity="top|center_horizontal"
            android:lines="1"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/trade_txt_size_sp_16"
            android:typeface="serif"
            android:visibility="invisible" />

        <include layout="@layout/include_progress" />

    </FrameLayout>
</android.support.v7.widget.CardView>