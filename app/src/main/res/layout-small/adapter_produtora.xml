<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/trade_size_dp_3"
    android:layout_weight="1"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/trade_size_dp_2"
    app:cardElevation="@dimen/trade_size_dp_3"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="false"
    card_view:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:minHeight="@dimen/trade_size_dp_50"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgFilme_produtora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:scaleType="centerCrop" />

            <include layout="@layout/include_progress" />

            <TextView
                android:id="@+id/titleTextView_produtora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:background="@color/black_transparente"
                android:fontFamily="sans-serif-condensed"
                android:gravity="top|center_horizontal"
                android:maxLines="2"
                android:textColor="@color/white"
                android:textSize="@dimen/trade_txt_size_sp_12"
                android:typeface="serif" />

        </FrameLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>