<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/trade_size_dp_3"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:minHeight="@dimen/trade_size_dp_200"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/img_poster_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:background="@color/white"
            android:cropToPadding="true"
            android:scaleType="centerCrop" />

        <ProgressBar
            android:id="@+id/progress_poster_grid"
            style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="@dimen/trade_size_dp_3" />

        <TextView
            android:id="@+id/text_title_crew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:layout_margin="@dimen/trade_size_dp_2"
            android:background="@android:drawable/screen_background_dark_transparent"
            android:elevation="@dimen/trade_size_dp_3"
            android:gravity="center"
            android:textColor="@color/white"
            android:visibility="invisible" />

    </FrameLayout>

</LinearLayout>