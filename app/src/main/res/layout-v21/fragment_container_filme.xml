<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@color/white"
    android:orientation="vertical"
    android:transitionName="poster"
    android:weightSum="1">

    <TextView
        android:id="@+id/titulo_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginEnd="2dp"
        android:background="@color/black_transparente"
        android:gravity="top|start"
        android:lines="2"
        android:maxLines="2"
        android:minLines="1"
        android:textSize="20sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/categoria_filme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1" />

        <TextView
            android:id="@+id/time_filme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            android:layout_weight="1"
            android:gravity="end" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/label_produtora"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/produtora"
            android:textStyle="normal|italic" />

        <TextView
            android:id="@+id/produtora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="2dp"
            android:maxLength="30"
            android:maxLines="1" />

        <TextView
            android:id="@+id/lancamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="2dp"
            android:gravity="end"
            android:maxLines="2" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_poster"
            android:layout_width="@dimen/poster_activity_width"
            android:layout_height="@dimen/poster_activity_height"
            android:contentDescription="@string/poster_filme"
            android:transitionName="poster" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="1dp">

                    <ImageView
                        android:id="@+id/img_star"
                        android:layout_width="@dimen/icon_activity_padrao"
                        android:layout_height="@dimen/icon_activity_padrao"
                        tools:src="@drawable/icon_star" />

                    <TextView
                        android:id="@+id/voto_media"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textStyle="normal|bold" />
                </FrameLayout>


                <ImageView
                    android:id="@+id/img_budget"
                    android:layout_width="@dimen/icon_activity_padrao"
                    android:layout_height="@dimen/icon_activity_padrao"
                    android:layout_gravity="center_vertical|center_horizontal"
                    tools:src="@drawable/orcamento" />

                <ImageView
                    android:id="@+id/icon_site"
                    android:layout_width="@dimen/icon_activity_padrao"
                    android:layout_height="@dimen/icon_activity_padrao"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="1dp"
                    tools:src="@drawable/site_on" />


                <ImageView
                    android:id="@+id/icon_collection"
                    android:layout_width="@dimen/icon_activity_padrao"
                    android:layout_height="@dimen/icon_activity_padrao"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="1dp"
                    tools:src="@drawable/collection_on" />

                <ImageView
                    android:id="@+id/icon_reviews"
                    android:layout_width="@dimen/icon_activity_padrao"
                    android:layout_height="@dimen/icon_activity_padrao"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="1dp"
                    android:src="@drawable/icon_reviews"
                    tools:src="@drawable/icon_reviews" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"

                        android:text="@string/original_title" />


                    <TextView
                        android:id="@+id/original_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"

                        android:text="@string/spoken_languages" />

                    <TextView
                        android:id="@+id/spoken_languages"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="@string/popularity" />

                    <TextView
                        android:id="@+id/popularity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="2dp"
                        android:paddingEnd="2dp"
                        android:text="" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"

                        android:text="@string/production_countries" />


                    <TextView
                        android:id="@+id/production_countries"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/descricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:textSize="14sp" />

    <HorizontalScrollView
        android:id="@+id/horizontal_treiler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:scrollbars="none"
        android:fillViewport="false"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:scrollbarAlwaysDrawVerticalTrack="false">

        <LinearLayout
            android:id="@+id/scroll_treiler_linerlayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" />

    </HorizontalScrollView>

    <TextView
        android:id="@+id/textview_elenco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_transparente"
        android:gravity="center_horizontal"
        android:hint="@string/elenco"
        android:text="@string/elenco"
        android:textColor="@color/primary_dark"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:visibility="invisible" />

    <HorizontalScrollView
        android:id="@+id/horizontal_elenco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:scrollbars="none"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:scrollbarAlwaysDrawVerticalTrack="false">

        <LinearLayout
            android:id="@+id/scroll_elenco_linerlayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" />

    </HorizontalScrollView>

    <TextView
        android:id="@+id/textview_crews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_transparente"
        android:gravity="center_horizontal"
        android:text="@string/por_tras_camera_filme"
        android:textColor="@color/primary_dark"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:visibility="invisible" />


    <HorizontalScrollView
        android:id="@+id/horizontal_crew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_margin="3dp"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:scrollbarAlwaysDrawVerticalTrack="false">

        <LinearLayout
            android:id="@+id/scroll_crew_liner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" />

    </HorizontalScrollView>

    <TextView
        android:id="@+id/textview_similares"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_transparente"
        android:gravity="center_horizontal"
        android:text="@string/similares"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:visibility="invisible" />

    <HorizontalScrollView
        android:id="@+id/horizontal_similares"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:fillViewport="false"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:layout_marginTop="3dp">

        <LinearLayout
            android:id="@+id/scroll_similares_linerlayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal" />

    </HorizontalScrollView>

    <Button
        android:id="@+id/imdb_site"
        android:text="@string/ver_imdb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/imdb"
        android:textAlignment="center"
        android:textSize="16sp" />

    <Button
        android:id="@+id/tmdb_site"
        android:text="@string/ver_tmdb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/tmdb"
        android:textSize="16sp" />


    <Button
        android:id="@+id/netflix"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/netflix"
        android:textSize="16sp" />

</LinearLayout>