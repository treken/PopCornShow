<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    android:weightSum="1"
    android:transitionName="poster">

    <TextView
        android:id="@+id/titulo_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@color/black_transparente"
        android:gravity="top|start"
        android:lines="2"
        android:maxLines="2"
        android:minLines="1"
        android:textSize="20sp"
        android:layout_marginRight="2dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="3dp">

        <TextView
            android:id="@+id/categoria_filme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1" />

        <TextView
            android:id="@+id/time_filme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:gravity="right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/produtora"
            android:textStyle="normal|italic" />

        <TextView
            android:id="@+id/produtora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:maxLength="30"
            android:maxLines="1"
            android:layout_marginStart="2dp" />

        <TextView
            android:id="@+id/lancamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="2dp"
            android:gravity="right"
            android:maxLines="2" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="3dp">

        <ImageView
            android:id="@+id/img_poster"
            android:layout_width="126dp"
            android:layout_height="162dp"
            android:transitionName="poster"
            android:contentDescription="@string/poster_filme" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:layout_gravity="center_vertical|center_horizontal">

                    <ImageView
                        android:id="@+id/img_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0" />

                    <TextView
                        android:id="@+id/voto_media"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textStyle="normal|bold" />
                </FrameLayout>


                <ImageView
                    android:id="@+id/img_budget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:elevation="0dp"
                    android:layout_gravity="center_vertical|center_horizontal" />

                <ImageView
                    android:id="@+id/icon_site"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="1dp" />


                <ImageView
                    android:id="@+id/icon_collection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="1dp" />

                <ImageView
                    android:id="@+id/icon_reviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="1dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1"
                android:layout_margin="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:layout_margin="1dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"

                        android:text="@string/original_title" />


                    <TextView
                        android:id="@+id/original_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="1dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"

                        android:text="@string/spoken_languages" />

                    <TextView
                        android:id="@+id/spoken_languages"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"

                        android:text="@string/popularity" />

                    <TextView
                        android:id="@+id/popularity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="2dp"
                        android:text="" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"

                        android:text="@string/production_countries" />


                    <TextView
                        android:id="@+id/production_countries"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/descricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:textSize="14sp" />

    <HorizontalScrollView
        android:id="@+id/horizontal_treiler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="false"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:layout_margin="3dp">

        <LinearLayout
            android:id="@+id/scroll_treiler_linerlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" />

    </HorizontalScrollView>

    <TextView
        android:id="@+id/textview_elenco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_transparente"
        android:gravity="center_horizontal"
        android:text="@string/elenco"
        android:textColor="@color/primary_dark"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:visibility="invisible"
        android:hint="@string/elenco" />

    <HorizontalScrollView
        android:id="@+id/horizontal_elenco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:layout_margin="3dp">

        <LinearLayout
            android:id="@+id/scroll_elenco_linerlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" />

    </HorizontalScrollView>

    <TextView
        android:id="@+id/textview_crews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_transparente"
        android:gravity="center_horizontal"
        android:text="@string/por_tras_camera"
        android:textColor="@color/primary_dark"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:textStyle="normal|bold"
        android:visibility="invisible" />


    <HorizontalScrollView
        android:id="@+id/horizontal_crew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:fillViewport="false"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:layout_margin="3dp">

        <LinearLayout
            android:id="@+id/scroll_crew_liner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" />

    </HorizontalScrollView>

    <TextView
        android:id="@+id/textview_similares"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_transparente"
        android:gravity="center_horizontal"
        android:text="@string/similares"
        android:textColor="@android:color/black"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:textStyle="normal|bold"
        android:visibility="invisible" />

    <HorizontalScrollView
        android:id="@+id/horizontal_similares"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="false"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:layout_margin="3dp">

        <LinearLayout
            android:id="@+id/scroll_similares_linerlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" />

    </HorizontalScrollView>

</LinearLayout>